<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
   
    <div class="mask rainy-ashville-gradient align-items-center">
        <div class="container text-center">
            <div class="row d-flex justify-content-center">
                <div class="card mw-100 mt-5">
                    <div class="card-body mx-auto d-block">
                        <div class="col-md-12">
                            <% if (typeof message != 'undefined') { %>
                            <p style="color:red;"><%= message %> </p>  
                            <% } %>
                            <form method="POST" action="/login">
                                <h2 class="login-heading mt-2 mb-5">Login</h2>
                                <div class="form-group">
                                    <input type="email" class="form-control mt-2" name="email" placeholder="Email"
                                        required>
                                    <input type="password" class="form-control mt-3 mb-5" name="password"
                                        placeholder="Password" required>
                                    <button type="submit" id="login" class="btn btn-md mt-3 mb-2"
                                        style="border-radius: 1rem;" >LOGIN</button>
                                </div>
                            </form>
                            <p>Don't have an account?</p>
                            <a href="/register">Sign Up</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</body>

</html>